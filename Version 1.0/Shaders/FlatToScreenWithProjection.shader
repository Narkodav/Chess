#shader vertex#version 330 corelayout (location = 0) in vec2 aPos;layout (location = 1) in vec2 aTexCoord;uniform mat4 uProjection;uniform float uZValue;out vec2 TexCoord;void main() {    gl_Position = uProjection * vec4(aPos, uZValue, 1.0);    TexCoord = aTexCoord;}#shader fragment#version 330 coreout vec4 FragColor;in vec2 TexCoord;uniform sampler2D uTexture;void main(){    FragColor = texture(uTexture, TexCoord);}