#shader vertex#version 330 corelayout (location = 0) in vec2 aPos;void main() {    gl_Position = vec4(aPos, 0.0, 1.0);}#shader fragment#version 330 coreout vec4 FragColor;uniform float uAlpha; // This will control the pulsingvoid main(){    vec4 highlightColor = vec4(1.0, 1.0, 1.0, uAlpha); // Or any color you want    FragColor = highlightColor;}