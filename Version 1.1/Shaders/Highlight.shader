#shader vertex#version 330 corelayout (location = 0) in vec2 aPos;uniform mat4 uProjection;uniform float uZValue;void main() {    gl_Position = uProjection * vec4(aPos, uZValue, 1.0);}#shader fragment#version 330 coreout vec4 FragColor;uniform float uAlpha;uniform vec3 uColor;void main(){    vec4 highlightColor = vec4(uColor.x, uColor.y, uColor.z, uAlpha);    FragColor = highlightColor;}